{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",58
            "runtimeArgs": [
                "run-script",
                "start-js"
            ],
            "port": 3004,
            "console": "internalConsole",
            "localRoot": "${workspaceRoot}/src",
            "protocol": "legacy"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": ["--no-timeouts", "./dist/**/*.spec.js"],
            "runtimeArgs": ["--nolazy"],
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Mocha 5858",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "outDir": null,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/home/docker/urlmgr-api",
            "args": ["--debug=5858", "node_modules/mocha/bin/_mocha", "src/**/*.spec.js", "--no-timeouts"],
            "skipFiles": [
                "node_modules/**/*.js"
            ]
        }
    ]
}